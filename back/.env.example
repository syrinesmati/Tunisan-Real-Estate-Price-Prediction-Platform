# Environment Configuration
APP_NAME="Tunisian Real Estate API"
DEBUG=True
API_VERSION="1.0.0"

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=tunisian_real_estate_prediction

# Database (Optional for storing scraped data)
DATABASE_URL=postgresql://user:password@localhost:5432/real_estate_db

# Model Paths
RENT_MODEL_PATH=./models/rent_model
SALE_MODEL_PATH=./models/sale_model

# Scraping Configuration
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_DELAY=2
MAX_SCRAPING_PAGES=10

# Azure Deployment (when ready)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=models
